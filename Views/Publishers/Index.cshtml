@model IEnumerable<Publisher>

@{
    ViewData["Title"] = "Wydawcy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Wydawcy</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Dodaj nowego wydawcę</a>
</p>
<table class="table table-dark table-hover table-sm text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)

            </th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td class="align-middle">
                    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
