@model IEnumerable<UserRolesModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Role użytkowników</h1>
<table class="table table-dark table-hover table-sm text-center">
    <thead>
        <tr>
            <th class="align-middle">@Html.DisplayNameFor(userList => userList.FirstName)</th>
            <th class="align-middle">@Html.DisplayNameFor(userList => userList.LastName)</th>
            <th class="align-middle">@Html.DisplayNameFor(userList => userList.Email)</th>
            <th class="align-middle">@Html.DisplayNameFor(userList => userList.Roles)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (UserRolesModel item in Model)
        {
            <tr>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.LastName)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Email)</td>
                <td class="align-middle">@string.Join(" , ", item.Roles.ToList())</td>
                <td class="align-middle">
                    <a class="btn btn-dark" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@item.UserId">Zarządzaj rolami</a>
                </td>
            </tr>
        }
    </tbody>
</table>