@model List<UserRolesModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Role użytkowników</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(userList => userList[0].FirstName)</th>
            <th>@Html.DisplayNameFor(userList => userList[0].LastName)</th>
            <th>@Html.DisplayNameFor(userList => userList[0].Email)</th>
            <th>@Html.DisplayNameFor(userList => userList[0].Roles)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Zarządzaj rolami</a>
                </td>
            </tr>
        }
    </tbody>
</table>