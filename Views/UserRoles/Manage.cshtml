@model List<ManageUserRolesModel>
@{
    ViewData["Title"] = "Zardządzanie rolami użytkownika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    @ViewData["Title"]
</h2>

<form method="post">
    <div>
        <h4>Dodaj/Usuń Role dla użytkownika / @ViewBag.UserName.</h4>
            <div class="form-group">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div>
            <input type="submit" value="Zapisz" class="btn btn-dark"
                   style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@ViewBag.userId"
               class="btn btn-dark" style="width:auto">Anuluj</a>
        </div>
    </div>
</form>
